<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-permissionapi29plugin" version="0.0.1" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>PermissionAPI29Plugin</name>
    <js-module name="PermissionAPI29Plugin" src="www/PermissionAPI29Plugin.js">
        <clobbers target="permissionapi29plugin" />
    </js-module>
    <platform name="android">
        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:requestLegacyExternalStorage="true" />
        </edit-config>
        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
            <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
            <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
            <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />
        </config-file>
    </platform>
</plugin>
